
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.led.led.ledControl">


    <Button
        android:id="@+id/readdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="readdata"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
         />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/readdata"
       >

        <ImageView
            android:id="@+id/image2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/soso"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/sobad"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/good"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/verybad"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="393dp"
        android:layout_height="66dp"
        android:src="@drawable/bg"
        tools:layout_editor_absoluteY="445dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:src="@drawable/image02"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:src="@drawable/image05"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:src="@drawable/image03"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />





    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:src="@drawable/image08"

        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageButton" />


    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="16dp"
        android:background="@color/pollute"
        android:src="@drawable/gear" />

    <Button
        android:id="@+id/buttonIST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/readdata"
        android:text="將當前數值存入" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_below="@+id/textView4"
        android:background="@color/secondary_text_disabled_material_light" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:background="@color/secondary_text_disabled_material_light" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView12"
        android:background="@color/secondary_text_disabled_material_light" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/pollute"
        android:text="目前空氣品質"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="XX"
        android:textSize="36sp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="XX" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:textSize="36sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@color/pollute"
        android:gravity="center_horizontal"
        android:text="PM2.5"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@color/pollute"
        android:gravity="center_horizontal"
        android:text="PM10"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
         />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@color/pollute"
        android:gravity="center_horizontal"

        android:layout_below="@id/linearLayout2"
        android:layout_centerHorizontal="true"

        android:text="PM5.0" />


</RelativeLayout>
