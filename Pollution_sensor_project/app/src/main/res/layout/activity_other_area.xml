<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.led.led.OtherArea">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/pollute"
        android:text="其他地區空氣品質"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pollute"
        android:src="@drawable/gear"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />





    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="393dp"
        android:layout_height="66dp"
        android:src="@drawable/bg"
        tools:layout_editor_absoluteY="445dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/image01" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:src="@drawable/image06" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/image03" />





    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:src="@drawable/image08"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageButton" />

</RelativeLayout>
